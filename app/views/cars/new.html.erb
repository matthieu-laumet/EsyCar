<h1 id="Nouveau-truc">Nouveau truc</h1>
<%= simple_form_for(@car) do |f| %>
  <%= f.input :brand, label: 'Marque', placeholder: 'Marque de la voiture' %>
  <%= f.input :year_of_production, label: 'Année', placeholder: 'Année...' %>
  <%= f.input :address, label: 'address', placeholder: 'Adresse...' %>
  <%= f.input :price_per_day, label: 'price_per_day', placeholder: 'Votre prix par jour' %>
  <%# <%= f.input :photo, as: :file, class:"btn btn-light" %>
  <%= f.button :submit, 'Créer !', class: 'btn btn-danger' %>
<% end %>
