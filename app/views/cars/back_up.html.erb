<div class="banner-car">
  <div class="container-banner-car">
    <%= form_tag cars_path, method: :get, class:"search" do %>
      <div class="search-address">
        <label for="address" class="search-label">Retrait et retour</label>
        <div class="search-inline">
          <i class="fas fa-search white-color"></i>
          <%= text_field_tag :address, params[:address], class: "form-control", placeholder: "Mérignac" %>
        </div>
      </div>
      <div class="search-depart">
        <label for="depart" class="search-label">Date de départ</label>
        <div class="search-inline">
          <%= text_field_tag :depart, params[:depart], class: "form-control", placeholder: "17 déc" %>
          <%= text_field_tag :dep_hour, params[:dep_hour], class: "form-control", placeholder: "10:30" %>
        </div>
      </div>
      <div class="search-arrivee">
        <label for="arrivee" class="search-label">Date de retour</label>
        <div class="search-inline">
          <%= text_field_tag :arrivee, params[:arrivee], class: "form-control", placeholder: "19 déc" %>
          <%= text_field_tag :arr_hour, params[:arr_hour], class: "form-control", placeholder: "08:00" %>
        </div>
      </div>
      <%= submit_tag "Rechercher", class: "btn btn-primary rechercher" %>
    <% end %>
  </div>
</div>


<li class="nav-item dropdown" id="clic-avatar">
  <div class="avatar-display">
    <%= current_user.first_name %>
    <%= image_tag "avatar.svg", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
      <%= link_to "Accueil", root_path, class: "dropdown-item" %>
      <%= link_to "Liste des véhicules", cars_path, class: "dropdown-item" %>
      <%= link_to "Louer ma voiture", new_car_path, class: "dropdown-item" %>
      <%= link_to "Se déconnecter", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
    </div>
  </div>
</li>
